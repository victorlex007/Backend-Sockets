<style>
    .table td,
    .table th {
        vertical-align: middle;
    }
</style>

{{#if productos.length}}
<h2>Lista de productos</h2>
<div class="table-responsive">
    <table class="table table-dark">
        <tr>
            <th>Producto</th>
            <th>Url</th>
        </tr>
        {{#each productos}}
        <tr>
            <td>{{this.producto}}</td>
            <td>{{this.url}}</td>
        </tr>
        {{/each}}
    </table>
</div>
{{ else }}
<h3 class="alert alert-warning">No hay productos</h3>
{{/if}}